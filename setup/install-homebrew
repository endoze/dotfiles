#!/usr/bin/env zsh

set -e

. "$(dirname $0)/colors"
. ./rcrc
. ./tag-zsh/config/zsh/functions/host_os_is_linux
. ./tag-zsh/config/zsh/functions/host_os_is_macos
. ./tag-zsh/config/zsh/functions/host_os_is_arm

printf "[1/4]üîé  Checking for Homebrew"

if ! command -v brew >/dev/null; then
	/bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
else
	printf "${CLEAR_LINE}‚ÑπÔ∏è  ${GREEN}Homebrew already installed${NO_COLOR}\n"
	printf "[1/4]üîé Checking for Homebrew"
fi

printf "${CLEAR_LINE}[2/4]‚öôÔ∏è  chown-ing /usr/local"

if host_os_is_macos; then
	USR_LOCAL=$(stat /usr/local)
	USER_OWNER=$(echo $USR_LOCAL | awk '{ print $5 }')
	GROUP_OWNER=$(echo $USR_LOCAL | awk '{ print $6 }')
	LOCAL_USER=$(whoami)

	if [[ $USER_OWNER -ne $LOCAL_USER ]] || [[ $GROUP_OWNER -ne "admin" ]]; then
		sudo chown $(whoami):admin /usr/local && sudo chown -R $(whoami):admin /usr/local
	fi
fi

if host_os_is_linux; then
  eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)"
fi

printf "${CLEAR_LINE}[3/4]üçª  Installing brew bundle"
brew tap Homebrew/bundle

printf "${CLEAR_LINE}[4/4]‚õì  Installing homebrew dependencies\n"

set +e
brew bundle --file="./setup/Brewfile" ||
	printf "‚ö†Ô∏è  ${YELLOW}Some dependencies from $line failed, attempting to continue${NO_COLOR}\n"
set -e

find . -type f -iname "Brewfile" -print0 | while IFS= read -r -d $'\0' line; do
	printf "${CLEAR_LINE}‚åõÔ∏è  ${GREEN}Installing dependencies from $line${NO_COLOR}\n"

	TAG_NAME=$(echo $line | sed -E 's/.*\/tag-(.*)\/.*/\1/')

	set +e
	echo $TAGS | grep -q $TAG_NAME
	TAG_INCLUDED=$?

	if [ $TAG_INCLUDED -eq 0 ]; then
		brew bundle --file="$line" ||
			printf "‚ö†Ô∏è  ${YELLOW}Some dependencies from $line failed, attempting to continue${NO_COLOR}\n"
	fi

	set -e

	printf "[4/4]‚õì  Installing homebrew dependencies"
done

printf "${CLEAR_LINE}[4/4]üéâ${GREEN}   Finished Homebrew Installation!${NO_COLOR}\n"
